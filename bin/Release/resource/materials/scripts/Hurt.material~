/// Just a simple red quad blended over the scene
material RedQuad
{
    technique
    {
        pass
        {
            lighting off
            diffuse 1.0 0.0 0.0 0.5
            specular 1.0 0.0 0.0 1.0 
            ambient 1.0 0.0 0.0
            emissive 1.0 0.0 0.0
            cull_hardware none
            depth_check off
            #scene_blend alpha_blend
        }
    }
}
